<AuthorizeView>
    <div class="previous-purchases">
        <h2>Previous Purchases</h2>
    <MudDataGrid Items="invoices"
                 Striped="true"
                 FixedHeader="true"
                 FixedFooter="true"
                 Height="65vh">
        <Columns>
            <TemplateColumn>
                @* <HeaderTemplate>Actions</HeaderTemplate> *@
                <CellTemplate Context="editContext">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                                   OnClick="() => EditInvoice(editContext.Item.InvoiceID)">
                        Edit
                    </MudButton>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.InvoiceID" Title="Invoice ID" />
            <PropertyColumn Property="x => x.InvoiceDate.ToShortDateString()" Title="Date" />
            <PropertyColumn Property="@(x => x.Total.ToString("C2"))"
                            Title="Total" />
        </Columns>
